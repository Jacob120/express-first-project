<html lang='en' dir='ltr'>
  <head>
    <meta charset='utf-8' />
    <title>Contact</title>
  </head>
  <body>
    <h2>Contact me</h2>
    <form action='/contact/send-message' method='POST'>
      {{#if isSent}}
        <div class='isSent'>This message has been sent!</div>
      {{/if}}
      {{#if isError}}
        <div class='isError'>You can't leave this field empty</div>
      {{/if}}
      <label>
        Your name:
        <input type='text' name='author' />
      </label>
      <label>
        Your email:
        <input type='email' name='sender' />
      </label>
      <label>
        Title:
        <input type='text' name='title' />
      </label>
      <label>
        Message:
        <textarea name='message'></textarea>
      </label>
      <button type='submit'>Send message</button>

    </form>
  </body>
</html>